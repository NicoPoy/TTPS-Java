<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

  <persistence-unit name="EMFoodTrucks">
  	<provider>org.hibernate.ejb.HibernatePersistence</provider>
  	<class>modelos.Zona</class>
   	<class>modelos.TipoDeEventos</class>
  	<class>modelos.TipoDeServicio</class> 	
  	<class>modelos.Usuario</class>
  	<class>modelos.FoodTrucker</class>
  	<class>modelos.Organizador</class>
  	<class>modelos.Evento</class>
  	<class>modelos.FoodTruck</class>
   	<class>modelos.Contratacion</class>
    <properties>
        <property name="javax.persistence.jdbc.driver_class" value="com.mysql.jdbc.Driver" />
        <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/foodtrucks" />
        <property name="javax.persistence.jdbc.user" value="root" />
        <property name="javax.persistence.jdbc.password" value="root" />
        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
        <property name="hibernate.hbm2ddl.auto" value="update" />
    </properties>
  </persistence-unit>

</persistence>